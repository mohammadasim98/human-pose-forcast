{
    "name": "gradient-HPPW3D",
    "n_gpu": 1,

    "arch": {
        "type": "HumanPosePredictorModel",
        "args": {
            "pose": {
                "spatial": {
                    "encoder":{
                        "num_layers": 2,
                        "num_heads": 8,
                        "hidden_dim": 256,
                        "mlp_dim": 512,
                        "dropout": 0.0
                    }
                },
                "spatiotemporal": {
                    "spatial": {
                        "decoder": {
                            "num_layers": 2,
                            "num_heads": 8,
                            "hidden_dim": 256,
                            "out_dim": 512,
                            "dropout": 0.0,
                            "use_global": false
                        }
                    },
                    "temporal": {
                        "encoder": {
                            "num_heads": 8,
                            "hidden_dim": 256,
                            "mlp_dim": 512,
                            "dropout": 0.0,
                            "directions": ["backward", "forward"]
                        }
                    }
                },
                "temporal": {
                    "encoder": {
                        "num_heads": 8,
                        "hidden_dim": 256,
                        "mlp_dim": 512,
                        "dropout": 0.0,
                        "directions": ["backward", "forward"]
                    }
                }
            },
            "image": {
                "spatial": {
                    "encoder":{
                        "image_size": 224, 
                        "patch_size": 16,  
                        "num_layers": 2, 
                        "num_heads": 12,  
                        "hidden_dim": 768,
                        "mlp_dim": 3072,
                        "total_layers": 12,
                        "vit_weights": "saved/models/vit/vit.pth",
                        "root_path": "/notebooks",
                        "device": "cuda:0"
                    }
                },
                "temporal": {
                    "encoder": {
                        "num_heads": 8,
                        "hidden_dim": 256,
                        "mlp_dim": 512,
                        "dropout": 0.0,
                        "directions": ["backward", "forward"]
                    }
                }
            },
             
            "activation": {
                "type": "ReLU",
                "args": {}
            },
            "unroll": true,
            "future_window": 15,
            "device": "cuda:0"
        }
    },
    "arch3d": {
        "mlps": [256, 512, 256], 
        "activation": "relu",
        "inp_dim": 38,
        "out_dim": 75,
        "num_layers": 3,
        "num_freq": 64
    },
    "train_loader": {
        "type": "ThreeDPWTFRecordDataset",
        "args":{
            "data_path": "/notebooks/data/3DPWPreprocessedTFRecord/train.tfrecord", 
            "n_scenes": 1, 
            "person_id": 0, 
            "subsample": 1, 
            "history_window": 15, 
            "future_window": 15, 
            "batch_size": 16, 
            "resize": [224, 224, 3],
            "shuffle": true, 
            "n_workers": 4, 
            "prefetch_factor": 8
        }
    },
    "validation_loader": {
        "type": "ThreeDPWTFRecordDataset",
        "args":{
            "data_path": "/notebooks/data/3DPWPreprocessedTFRecord/validation.tfrecord", 
            "n_scenes": 1, 
            "person_id": 0, 
            "subsample": 1, 
            "history_window": 15, 
            "future_window": 15, 
            "batch_size": 16, 
            "resize": [224, 224, 3],
            "shuffle": false, 
            "n_workers": 4, 
            "prefetch_factor": 8
        }
    },
    "test_loader": {
        "type": "ThreeDPWTFRecordDataset",
        "args":{
            "data_path": "/notebooks/data/3DPWPreprocessedTFRecord/test.tfrecord", 
            "n_scenes": 15, 
            "person_id": 0, 
            "subsample": 1, 
            "history_window": 15, 
            "future_window": 15, 
            "batch_size": 1, 
            "resize": [224, 224, 3],
            "shuffle": false, 
            "n_workers": 8, 
            "prefetch_factor": 32
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001
        }
    },
    "loss": {
        "type": "mpjpe",
        "args": {}
    } ,
    "metrics": [
        {
            "type": "VIM",
            "args": {
                "name": "vim2d",
                "img_size": 224,
                "is_inp_abs": false,
                "is_pose_norm": true
            } 
        }, 
        {
            "type": "VIM",
            "args": {
                "name": "vim3d",
                "is_inp_abs": false,
                "is_pose_norm": false
            }
        }
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.85,
            "verbose": true
        }
    },
    "trainer": {
        "type": "HPPW3DTrainer",
        "args": {},

        "epochs": 20,
        "save_dir": "/notebooks/saved/",
        "save_period": 2,
        "eval_period": 1,
        "verbosity": 2,
        "monitor": "min eval_loss",
        "early_stop": 4       
    },
    "pose_norm": true,
    "use_root_relative": true,
    "tensorboard": false,
    "wandb": false

}